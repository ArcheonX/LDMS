<div style="width: 100%; border-width: thin; border-style: solid;">
    <div class="panel panel-default" style="width: 100%;">
        <div class="panel-body">
            <div class="form-horizontal" style="margin-right: 25px; margin-left: -25px; margin-top: 25px">
                <div class="row form-group">
                    <div class="col-sm-2 col-md-2">
                        <span class="pull-right" style="vertical-align:middle">
                            <label class="LabelCaption">Division</label>
                        </span>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <input type="text"
                               style="width: 100%"
                               id="txtDivision"
                               disabled="disabled"
                               value=""
                               class="form-control" />
                    </div>
                </div> 
                <div class="row form-group">
                    <div class="col-sm-2 col-md-2">
                        <span class="pull-right" style="vertical-align: middle">
                            <label class="LabelCaption">Department</label>
                        </span>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <input type="text"
                               style="width: 100%"
                               id="txtDepartment"
                               disabled="disabled"
                               value="Human Resource"
                               class="form-control" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-2 col-md-2">
                        <span class="pull-right" style="vertical-align:middle">
                            <label class="LabelCaption">Section</label>
                        </span>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <select id="selectSection"
                                name="selectSection"
                                title="Please Enter Section"
                                class="form-control required"
                                style="width: 100%">
                            <option value="null">----All-----</option>
                            @foreach (var std in ViewData["Sections"] as IList<LDMS.ViewModels.LDMS_M_Section>)
                            {
                                <option value="@std.ID">@std.SectionID - @std.SectionName_EN</option>
                            }
                        </select>
                    </div>
                    <div class="col-sm-2 col-md-2">
                        <span class="pull-right" style="vertical-align:middle">
                            <label class="LabelCaption">Keyword</label>
                        </span>
                    </div>
                    <div class="col-sm-4 col-md-4">
                        <input type="text"
                               title="Please Enter Employee ID"
                               id="txtEmployeeId"
                               style="width: 100%"
                               class="form-control required" />
                    </div>
                </div>
                <div class="row form-group" style="padding-top:15px;">
                    <div class="col-sm-1 col-md-1 offset-1">
                        <button id="btnSearchEmployee" class="btn btn-outline-secondary waves-effect waves-light" style="width:100%">
                            <img style="width:25px;height:25px" src="~/assets/images/svg/icon-seach.svg" />Search
                        </button>
                    </div>
                    <div class="col-sm-2 col-md-2">
                        <button id="btnEditSection" class="btn btn-outline-danger waves-effect waves-light" style="width:100%">
                            <img style="width:25px;height:25px" src="~/assets/images/svg/icon-edit-blue.svg" />&nbsp;&nbsp;Edit Section
                        </button>
                    </div>
                    <div class="col-sm-1 col-md-1 offset-6">
                        <button id="btnImportExcel" class="btn btn-outline-primary waves-effect waves-light" style="width:100%">
                            <img style="width:25px;height:25px" src="~/assets/images/svg/icon-excel-green.svg" />&nbsp;&nbsp;Import
                        </button>
                    </div>
                    <div class="col-sm-1 col-md-1">
                        <button id="btnExportExcel" class="btn btn-outline-primary waves-effect waves-light" style="width:100%">
                            <img style="width:25px;height:25px" src="~/assets/images/svg/icon-excel-green.svg" />&nbsp;&nbsp;Export
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="viewListEmployee" style="display:block;width:100%">
    <div class="panel panel-default" style="margin-top:-15px;width:100%;">
        <div class="panel-body" style="width:100%;margin-top:25px;">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-fixed" id="dtListEmployee">
                    <thead style="background-color:#1e88e5;color:#ffffff">
                        <tr>
                            <th style="text-align:center;width:100px">#</th>
                            <th style="text-align:center">Employee ID</th>
                            <th style="text-align:center">Employee Name</th>
                            <th style="text-align:center;width:200px">Job Grade</th>
                            <th style="text-align:center;width:200px">Job Title</th>
                            <th style="text-align:center;width:150px">Section Head</th>
                            <th style="text-align:center;width:300px">Section</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var std in ViewData["Employees"] as IList<LDMS.ViewModels.LDMS_M_User>)
                        {
                            <tr>
                                <td style="text-align:center;">@std.RowIndex</td>
                                <td style="text-align:center">@std.EmployeeID</td>
                                <td style="text-align:center">@std.Name @std.Surname</td>
                                <td style="text-align:center;">
                                    <select id="selectJobGrade_@std.EmployeeID"
                                            name="selectJobGrade_@std.EmployeeID"
                                            class="form-control required"
                                            disabled
                                            style="width: 100%">
                                        <option value="null">none</option>
                                        @foreach (var std2 in ViewData["JobGrades"] as IList<LDMS.ViewModels.LDMS_M_JobGrade>)
                                        {
                                            @if (@std2.ID == @std.ID_JobGrade)
                                            {
                                                <option value="@std2.ID" selected="selected">@std2.JobGradeName_EN</option>
                                            }
                                            else
                                            {
                                                <option value="@std2.ID">@std2.JobGradeName_TH</option>
                                            }

                                        }
                                    </select>
                                </td>
                                <td style="text-align:center;">
                                    <select id="selectJObTitle_@std.EmployeeID"
                                            name="selectJObTitle_@std.EmployeeID"
                                            disabled
                                            class="form-control required"
                                            style="width: 100%">
                                        <option value="null">none</option>
                                        @foreach (var std2 in ViewData["JobTitles"] as IList<LDMS.ViewModels.LDMS_M_JobTitle>)
                                        {
                                            @if (@std2.ID == @std.ID_JobTitle)
                                            {
                                                <option value="@std2.ID" selected="selected">@std2.JobTitleName_EN</option>
                                            }
                                            else
                                            {
                                                <option value="@std2.ID">@std2.JobTitleName_EN</option>
                                            }

                                        }
                                    </select>
                                </td>
                                <td style="text-align:right;">
                                    @if (@std.LDMS_M_UserRole.IsSectionHead == 1)
                                    {
                                        <input type="checkbox" name="selectSectionHead_@std.EmployeeID"
                                               checked
                                               id="selectSectionHead_@std.EmployeeID" style="width:100%;margin-left:100px;" /><label style="width:75px;" for="selectSectionHead_@std.EmployeeID"></label>
                                    }
                                    else
                                    {
                                        <input type="checkbox" name="selectSectionHead_@std.EmployeeID"
                                               id="selectSectionHead_@std.EmployeeID" style="width:100%;margin-left:100px;" /><label style="width:75px;" for="selectSectionHead_@std.EmployeeID"></label>
                                    }
                                </td>
                                <td style="text-align:left;">
                                    <select id="selectSection_@std.EmployeeID"
                                            name="selectSection_@std.EmployeeID"
                                            class="form-control required"
                                            style="width: 100%">
                                        <option value="null">none</option>
                                        @foreach (var std2 in ViewData["Sections"] as IList<LDMS.ViewModels.LDMS_M_Section>)
                                        {
                                            @if (@std2.ID == @std.LDMS_M_UserRole.ID_Section)
                                            {
                                                <option value="@std2.ID" selected="selected">@std2.SectionID - @std2.SectionName_EN</option>
                                            }
                                            else
                                            {
                                                <option value="@std2.ID">@std2.SectionID - @std2.SectionName_EN</option>
                                            }

                                        }
                                    </select>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 