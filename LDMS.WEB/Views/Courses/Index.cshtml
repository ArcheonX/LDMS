@{
    ViewData["Title"] = "Course Training";
    ViewData["MainTitle"] = "I-Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
    <script src="~/assets/plugins/highchart/highcharts.js"></script>
    <script src="~/assets/plugins/highchart/modules/exporting.js"></script>
    <script src="~/assets/plugins/highchart/modules/export-data.js"></script>
    <script src="~/assets/plugins/datatables/jquery.dataTables.min.js"></script> 
<div class="panel-body" style="width:100%;">
    <form method="post">
        <div class="form-group m-2 row">
            <label class="col-sm-2 col-form-label" style="text-align:right">Course ID</label>
            <div class="col-4">
                <input class="form-control" type="text" value="HR-S001-01" id="CourseID">
            </div>
        </div><div class="form-group m-2 row">
            <label for="example-text-input" class="col-2 col-form-label" style="text-align:right">Course Name</label>
            <div class="col-4">
                <input class="form-control" type="text" value="Engineering PT-WI 1" id="CourseName">
            </div>
        </div>
        <div class="input-group m-2 row">
            <label for="example-text-input" class="col-2 col-form-label" style="text-align:right">Course Status</label>
            <div class="col-4">
                <select id="ddlStatus" class="form-control">
                    <option value="">@LDMS.WEB.Resources.Enum.e_Select_All</option>
                    <option value="1">@LDMS.WEB.Resources.Enum.e_Status_Active</option>
                    <option value="0">@LDMS.WEB.Resources.Enum.e_Status_Inactive</option>
                </select>
            </div>

        </div>
        <div class="input-group m-2 row">
            <label for="example-text-input" class="col-2 col-form-label" style="text-align:right">Learn Method</label>

                <div class="col-4">
                    <select id="ddlLearnMethod" class="form-control">
                        <option value="">@LDMS.WEB.Resources.Enum.e_Select_All</option>
                        <option value="1">@LDMS.WEB.Resources.Enum.e_Status_Active</option>
                        <option value="0">@LDMS.WEB.Resources.Enum.e_Status_Inactive</option>
                    </select>
                </div>


        </div>

    </form>
    </div>

    <div class="table-responsive m-t-40">
        <table class="display dataTable" width="100%" id="dtCourseList">
            <thead>
                <tr>
                    <th style="text-align:center;width:100px">#</th>
                    <th style="text-align:center;width:150px">Course ID</th>
                    <th style="text-align:center;width:150px">Course Name</th>
                    <th style="text-align:center;width:150px">Course Status</th>
                    <th style="text-align:center;width:150px">Learn Method</th>
                    <th style="text-align: center;width:50px">Edit</th>
                    <th style="text-align:center;width:50px">Delete</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>

</div>
@section Scripts{
    <script type="text/javascript">

         $(document).ready(function () {

             LoadCourseLearnMethod();
             Search();
         });


        function LoadCourseLearnMethod() {
           $('#selectLearnMethod').empty();
                 $.ajax({
                url: "/Courses/GetAllCourseLearnMethod",
                type: "GET",
                    }).done(function (items) {
                        var options = $('#selectLearnMethod');
                        options.append($("<option />").val(null).text("--- Select All---"));
                        $.each(items, function () {
                            options.append($("<option />").val(this.ID).text(this.Course_LearnMethodName_EN));
                        });
                        $('select[name="selectLearnMethod"]').val(null);
                    });
        }


        function Search() {
            //alert('search function');
             dtData = $('#dtCourseList').DataTable({
                'processing': true,
                'serverSide': true,
                'paging': true,
                "pagingType": "full_numbers",
                'searching': false,
                 //retrieve: true,
                 destroy: true,
                'ajax': {
                    'url': '@Url.Action("Search", "Courses")',
                    'type': 'POST',
                    'data': {
                        'CourseID': $("#txtFilterCourseID").val(),
                        'CourseName': $("#txtFilterCourseName").val(),
                        'CourseStatus': $("#selectCourseStatus").val(),
                        'LearnMetod': $("#selectLearnMetod").val(),
                        "__RequestVerificationToken": $('input[name=__RequestVerificationToken]').val()
                    },
                },
                'columns': [
                    { data: 'rownumber' },
                    { data: 'CourseID' },
                    { data: 'CourseName' },
                    { data: 'LearnMethodName' },
                    { data: 'CourseStatus' },
                    {
                        "mData": "ID",
                        "mRender": function (data, type, row) {
                            var url = '@Url.Content("~/Courses/Detail/")'+data;
                            var icon = '@Url.Content("~/assets/images/svg/icon-edit-blue.svg")';
                            return "<a href='"+url+"'><img src='"+icon+"' class='light-logo' alt='homepage' /></a>";
                        }
                    },
                    {
                        "mData": "ID",
                        "mRender": function (data, type, row) { return "<a href='#'><img src='@Url.Content("~/assets/images/svg/icon-delete-red.svg")' class='light-logo' alt='homepage' /></a>"; }
                    }

                 ],
                 "columnDefs": [
                     { "orderable": false, "targets": 0, "className": "text-center",  "width": "4%" },
                     { "orderable": false, "targets": 1, "className": "text-center" },
                     { "orderable": false, "targets": 2, "className": "text-center" },
                     { "orderable": false, "targets": 3, "className": "text-center" },
                     { "orderable": false, "targets": 4, "className": "text-center" },
                     { "orderable": false, "targets": 5, "className": "text-center" },
                     { "orderable": false, "targets": 6, "className": "text-center" },
                     //{ "orderable": false, "targets": 7, "className": "text-center" }

                 ]
            });
        }

    </script>
}