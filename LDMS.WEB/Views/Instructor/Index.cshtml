<div class="card">
    <form class="form">
        <div class="form-group m-2 row">
            <label for="example-text-input" class="col-2 col-form-label" style="text-align:right">Instructor ID</label>
            <div class="col-4">
                <!--<input class="form-control" type="text" value="Artisanal kale" id="example-text-input">-->
                <input class="form-control" type="text" name="Instructor_ID" placeholder="Instructor ID" asp-for="Instructor_ID">
            </div>
            <label for="example-text-input" class="col-2 col-form-label" style="text-align:right">Status</label>
            <div class="col-4">
