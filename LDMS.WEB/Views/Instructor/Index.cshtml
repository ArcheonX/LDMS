                    </div>
                </div>
            </div>
            <label for="example-text-input" class="col-2 col-form-label" style="text-align:right">Course Experience</label>
            <div class="col-4">
                <!--<input class="form-control" type="text" value="" id="example-text-input">-->
                <input class="form-control" type="text" name="Course_Experience" placeholder="Course Experience" asp-for="Course_Experience">
            </div>
        </div>
        <div class="form-group m-2 row">
            <label for="example-text-input" class="col-2 col-form-label" style="text-align:right">Course</label>
            <div class="col-4">
                <!--<input class="form-control" type="text" value="" id="example-text-input">-->
                <input class="form-control" type="text" name="Course" placeholder="Course" asp-for="Course">
            </div>
            <div class="col-2">
            </div>
            <div class="col-2">
                <button id="btnSeacrh" type="button" class="btn btn-success waves-effect waves-light" onclick="Search()">Search</button>
                <button id="btnAdd" class="btn btn-info waves-effect waves-light">Add</button>
            </div>
        </div>
    </form>
</div>
<div class="card">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">Data Export</h4>
                    <h6 class="card-subtitle">Export data to Copy, CSV, Excel, PDF & Print</h6>
                    <div class="table-responsive m-t-40">
                        <table id="example23" class="display nowrap table table-hover table-striped table-bordered" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Instructor ID</th>
                                    <th>Instructor Name</th>
                                    <th>Type</th>
                                    <th>Organization / Department</th>
                                    <th>Status</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <!--<tfoot>
                                <tr>
                                    <th>No</th>
                                    <th>Instructor ID</th>
                                    <th>Instructor Name</th>
                                    <th>Type</th>
                                    <th>Organization / Department</th>
                                    <th>Status</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </tfoot>-->
                            @{int i = 1;}
                            @foreach (var instructor in ViewData["Instructor"] as IList<LDMS.ViewModels.LDMS_M_Instructor>)
                            {
                                <tbody>
                                    <tr>
                                        <th>@i</th>
                                        <td>@instructor.Instructor_ID</td>
                                        <td>@instructor.Instructor_Name</td>
                                        <td>@instructor.Type</td>
                                        <td>@instructor.Organization</td>
                                        <td>@instructor.IsActive</td>
                                        <td><i class="fa fa-pencil" /></td>
                                        <td><i class="fa fa-trash-o" /></td>
                                    </tr>
                                </tbody>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>

        /*$("#btnSeacrh").click(function (e) {
