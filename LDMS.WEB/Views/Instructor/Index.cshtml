            <div class="col-4">
                <!--<input class="form-control" type="text" value="Artisanal kale" id="example-text-input">-->
                <input class="form-control" type="text" name="Organization" placeholder="Organization" asp-for="Organization">
            </div>
        </div>
        <div class="form-group m-2 row">
            <label for="example-text-input" class="col-2 col-form-label" style="text-align:right">Type</label>
            <div class="col-4">
                <div class="btn-group">
