    <link rel="stylesheet" type="text/css" href="~/css/vendor/css-hamburgers/hamburgers.min.css">
    <link href="~/lib/sweetalert/sweetalert.css" type="text/css" rel="stylesheet">
    <link href="~/css/Login.css" rel="stylesheet">
    <link href="~/css/colors/blue.css" id="theme" rel="stylesheet">
    <script src="~/assets/app/loginController.js"></script>
    <script src="~/assets/app/MessageController.js"></script>
    <!--[if lt IE 9]>
        <script src="~/assets/lib/html5shiv/html5shiv.js"></script>
        <script src="~/assets/lib/respond.js/respond.min.js"></script>
    <![endif]-->
</head>
<html>
<body style="height:100%; width:100%;background:linear-gradient(bottom, #fff, #00c6fb);">
    <div id="header" style="position:absolute; top:0px; left:0px; height:0px; right:0px;overflow:no-content;">
        <header class="topbar">
            <nav class="navbar top-navbar navbar-toggleable-sm navbar-light">
                <div class="navbar-header">
                    <a class="navbar-brand" href="index.html">
                        <b>
                            <img src="~/assets/images/logo-light-icon.png" class="light-logo" alt="homepage" />
                            <img src="~/assets/images/logo-light-text.png" class="light-logo" alt="homepage" />
                        </b>
                    </a>
                </div>
                <div class="head-title"><h1>Learning and Development Management System</h1></div>
                <div class="logo-img"><span class="pull-right"><img class="ldms-logo" src="~/assets/images/svg/STT.svg" alt="homepage" /></span></div>
            </nav>
        </header>
    </div>
    <div id="content" style="position:absolute; top:15%; bottom:15%; left:0px; right:0px; overflow:no-content;">
        <div class="page-wrapper">
            <div class="container-login100" id="pn-login">
                <div class="wrap-login100 p-t-190 p-b-30">
                    <div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
                        <input class="input100" id="txtUserName" type="text" name="Username" required title="Please Enter User Name (Employee ID)" placeholder="Username">
                    </div>
                    <div class="wrap-input100 validate-input m-b-10" style="margin-top:20px;" data-validate="Password is required">
                        <input class="input100" id="txtPassword" type="password" name="Password" required title="Please Enter Password (Default : Employee ID)" placeholder="Password">
                    </div>
                    <div class="wrap-input100 validate-input m-b-10" style="margin-top:20px;" data-validate="Password is required">
                        <input type="checkbox" id="chkRememberMe" /><label for="chkRememberMe">&nbsp;&nbsp;Remember Me</label>
                    </div>
                    <div class="container-login100-form-btn p-t-10" style="margin-top:20px;">
                        <button id="btn-frm-login" onclick="OnAuthentication()" class="login100-form-btn">Login </button>
                    </div>

                    <div class="text-center w-full p-t-25 p-b-230" style="margin-top:20px;">
                        <a href="#" class="txt1">Forgot Password? </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="footer" style="position:absolute; bottom:0px; height:50px; left:0px; right:0px; overflow:no-content;">
        <span class="text-center" style="width:100%;margin-left:25%;">ลิขสิทธิ์ © 2020 SONY TECHNOLOGY (THAILAND) CO., LTD. สงวนลิขสิทธิ์ เงื่อนไขในการใช้งานนโยบายส่วนบุคคล</span>
    </div>
</body>
</html>
