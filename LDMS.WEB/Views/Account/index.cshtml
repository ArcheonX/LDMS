    <body class="fix-header card-no-border" style="background:linear-gradient(bottom, #fff, #00c6fb);">
        <div class="preloader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
            </svg>
        </div>
        <div id="main-wrapper">
            <header class="topbar">
                <nav class="navbar top-navbar navbar-toggleable-sm navbar-light">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="index.html">
                            <b>
                                <img src="~/assets/images/logo-light-icon.png" class="light-logo" alt="homepage" />
                                <img src="~/assets/images/logo-light-text.png" class="light-logo" alt="homepage" />
                            </b>
                        </a>
                    </div>
                    <div class="head-title"><h1>Learning and Development Management System</h1></div>
                    <div class="logo-img"><img src="~/assets/images/svg/STT.svg" alt="homepage" /></div>
                </nav>
            </header>
            <div class="page-wrapper">
                <div class="container-login100">
                    <div class="wrap-login100 p-t-190 p-b-30" style="overflow:hidden;min-height:850px;">
                        <form class="login100-form validate-form" id="Login-form" asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger">@ViewBag.error</div>
                            <div class="wrap-input100 validate-input m-b-10" data-validate="Username is required">
                                <input class="input100" type="text" name="Username" required title="Please Enter User Name (Employee ID)" placeholder="Username" asp-for="Username">
                                @*<span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-user"></i>
                                </span>*@
                            </div>
                            <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                                <input class="input100" type="password" name="Password" required title="Please Enter Password (Default : Employee ID)" placeholder="Password" asp-for="Password">
                                @*<span class="focus-input100"></span>
                                <span class="symbol-input100">
                                    <i class="fa fa-lock"></i>
                                </span>*@
                            </div>
                            @*<div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
